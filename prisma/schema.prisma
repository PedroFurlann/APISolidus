generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String
  password     String?
  googleId     String?
  facebookId   String?
  avatarUrl    String?
  transactions Transactions[]
  Messages     Messages[]
}

model Transactions {
  id        Int      @id @default(autoincrement())
  title     String
  type      String
  category  String?
  amount    Decimal
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Messages {
  id            Int      @id @default(autoincrement())
  content       String   @db.LongText
  isUserMessage Boolean
  createdAt     DateTime @default(now())
  User          User     @relation(fields: [userId], references: [id])
  userId        Int
}
